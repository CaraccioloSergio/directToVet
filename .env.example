# ===========================================
# Direct to Vet - Environment Configuration
# ===========================================

# Environment: development | production
ENV=development

# ===========================================
# Google AI (Gemini)
# ===========================================
GOOGLE_API_KEY=your_google_ai_studio_api_key

# ===========================================
# Google Sheets
# ===========================================
# Path to service account JSON (for local dev)
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/service_account.json

# JSON credentials as string (for container deployments like AppRunner)
# If set, this takes priority over GOOGLE_SHEETS_CREDENTIALS_PATH
# GOOGLE_SHEETS_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Spreadsheet ID (from the URL)
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# ===========================================
# Twilio (WhatsApp)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ===========================================
# Mercado Pago OAuth
# ===========================================
MP_CLIENT_ID=your_mercadopago_client_id
MP_CLIENT_SECRET=your_mercadopago_client_secret
MP_REDIRECT_URI=https://yourdomain.com/mp/oauth/callback

# ===========================================
# Webhooks
# ===========================================
# Base URL for webhooks (ngrok in dev, your domain in prod)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# ===========================================
# Email (SendGrid) - Optional
# ===========================================
SENDGRID_API_KEY=your_sendgrid_api_key
OPS_EMAIL=ops@yourdomain.com

# ===========================================
# Security
# ===========================================
# Secret for webhook validation (generate a random string)
WEBHOOK_SECRET=your_random_webhook_secret

# ===========================================
# Token Storage (dev only)
# ===========================================
# Path to store OAuth tokens locally
LOCAL_TOKEN_STORE_PATH=./data/tokens.json

# ===========================================
# Google Cloud (prod only)
# ===========================================
# GCP_PROJECT_ID=your_gcp_project_id
